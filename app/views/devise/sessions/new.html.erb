<div class="flex flex-col h-screen">
 <div class="bg-sky-700 p-4 flex items-center">
   <a href="/">
    <%= image_tag('back.png', width: '30', height: '6') %>
   </a>  
  <h2 class="text-light text-center text-white flex-1">LOGIN</h2>
</div>

  <div class="lg:w-2/5  w-100 lg:mx-auto flex flex-col border p-2 h-5/6">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:" my-2 w-full rounded-md p-3 focus:outline-none", placeholder: "email" %>
  </div>

  <div class="field"> 
    <%= f.password_field :password, autocomplete: "current-password", class:" w-full rounded-md p-3 focus:outline-none", placeholder: "password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: 'bg-sky-700  text-white text-center p-2 hover:bg-sky-800 rounded my-4', style: 'width: 100%; display: block;' %>
  </div>
<% end %>
<div class="text-center">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-gray-400'  %><br />
<% end %>
</div>

</div>
</div>