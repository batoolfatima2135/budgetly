<div class="flex flex-col h-screen">
 <div class="bg-sky-700 p-4 flex items-center">
  <a href="/">
    <%= image_tag('back.png', width: '30', height: '6') %>
   </a>  
  <h2 class="text-light text-center text-white flex-1">SIGN UP</h2>
</div>
<div class="lg:w-2/5  w-100 lg:mx-auto flex flex-col border p-2 h-5/6">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name,  class:"w-full rounded-md p-3 focus:outline-none", placeholder: "Full name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true,  class:" w-full rounded-md p-3 focus:outline-none", placeholder: "Email" %>
  </div>

  

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", class:"w-full rounded-md p-3 focus:outline-none", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full rounded-md p-3 focus:outline-none", placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'bg-sky-700  text-white text-center p-2 hover:bg-sky-800 rounded my-4', style: 'width: 100%; display: block;' %>
  </div>
<% end %>

</div>
</div>