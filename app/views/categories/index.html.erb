<div class="flex flex-col h-screen">
 <div class="bg-sky-700 p-4 flex items-center">
  <a href="/">
    <%= image_tag('back.png', width: '30', height: '6') %>
   </a>  
  <h2 class="text-light text-center text-white flex-1">CATEGORIES</h2>
</div>
<div class="lg:w-2/5  w-100 lg:mx-auto flex flex-col border p-2 h-full">
<p style="color: green"><%= notice %></p>
<div class="border m-2 p-5 mx-3 ">
  <div class=" flex items-center ">
  <p class="font-medium text-gray-500 text-xl ">MONTHLY BUDGET</p>
  <p class="text-center font-bold text-xl  ml-auto">$<%=  @budget %> </p>
  </div>
  <% if @over_budget %>
  <p class="mt-1 text-red-600 font-medium">You are <b>$<%=  @diffrence %></b> over your budget</p>
  <% end %>
</div>

<div id="categories">
  <% @categories.each do |category| %>
    <a href="<%= category_payments_path(category) %>">
    <%= render category, total: @total, over_budget: @over_budget %>
  </a>
  <% end %>
</div>

<%= link_to "Add new category", new_category_path, class: "p-3 m-3 bg-sky-700 rounded text-center text-white" %>
</div>
</div>